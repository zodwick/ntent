<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="16dp"
    android:background="@drawable/bg_overlay_card"
    android:elevation="8dp"
    android:orientation="horizontal"
    android:padding="14dp">

    <!-- Left accent bar -->
    <View
        android:id="@+id/accentBar"
        android:layout_width="3dp"
        android:layout_height="match_parent"
        android:layout_marginEnd="12dp"
        android:background="@color/terminal_green" />

    <!-- Content area -->
    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical">

        <!-- Title row -->
        <TextView
            android:id="@+id/resultTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:fontFamily="@font/chakra_petch_semibold"
            android:letterSpacing="0.1"
            android:maxLines="1"
            android:textColor="@color/text_primary"
            android:textSize="14sp" />

        <!-- Subtitle -->
        <TextView
            android:id="@+id/resultSubtitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            android:ellipsize="end"
            android:fontFamily="@font/jetbrains_mono_regular"
            android:maxLines="1"
            android:textColor="@color/text_secondary"
            android:textSize="11sp" />

        <!-- Thumbnail + action button row -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/resultThumbnail"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:layout_marginEnd="12dp"
                android:scaleType="centerCrop" />

            <TextView
                android:id="@+id/actionButton"
                android:layout_width="0dp"
                android:layout_height="36dp"
                android:layout_weight="1"
                android:background="@drawable/bg_toggle_active"
                android:fontFamily="@font/chakra_petch_semibold"
                android:gravity="center"
                android:letterSpacing="0.15"
                android:textColor="@color/surface_black"
                android:textSize="12sp" />
        </LinearLayout>

        <!-- Auto-dismiss progress bar -->
        <ProgressBar
            android:id="@+id/autoDismissProgress"
            style="@android:style/Widget.ProgressBar.Horizontal"
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:layout_marginTop="10dp"
            android:max="1000"
            android:progress="1000"
            android:progressTint="@color/terminal_green_dim"
            android:progressBackgroundTint="@color/text_muted" />

    </LinearLayout>

</LinearLayout>
